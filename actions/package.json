{
  "name": "tslibs-actions",
  "version": "0.1.0",
  "private": true,
  "description": "Collection of actions useful for building and publishing tslibs",
  "type": "module",
  "files": [
    "dist/"
  ],
  "bin": {
    "assert-prod-version": "dist/assert-prod-version-action.js",
    "set-next-dev-version": "dist/set-next-dev-version-action.js",
    "should-publish-package": "dist/should-publish-package-action.js"
  },
  "scripts": {
    "build": "tsc --project 'tsconfig.build.json'",
    "test": "ava src/**.test.ts --serial --no-worker-threads --verbose",
    "lint": "tsc && eslint 'src' --max-warnings 0",
    "lint-fix": "eslint --fix 'src'"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "pacote": "^14.0.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.8.1",
    "@types/pacote": "^11.1.5",
    "@types/semver": "^7.3.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "ava": "^4.3.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-duplicate-imports": "warn",
      "no-console": "warn",
      "simple-import-sort/imports": [
        "warn",
        {
          "groups": [
            [
              "^@?\\w"
            ],
            [
              "^\\."
            ],
            [
              "^\\u0000"
            ]
          ]
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
